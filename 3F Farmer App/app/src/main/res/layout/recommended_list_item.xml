<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView android:id="@+id/horizontalScroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:scrollbars="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="6"
        >

        <TextView
            android:id="@+id/plotCode"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="plotCode"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="14dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/recommendedChemical"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@drawable/table_content_cell_bg"
            android:text="recommendedChemical"
            android:textSize="18sp"
            android:padding="14dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/dosage"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="dosage"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="14dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/comments"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="comments"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="14dp"
            />

        <TextView
            android:id="@+id/issue"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/fertilizer2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="14dp"
            />
        <TextView
            android:id="@+id/recommendedBy"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/fertilizer3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="14dp"
            />
        <TextView
            android:id="@+id/recommendedOn"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/fertilizer3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:padding="14dp"
            />

    </LinearLayout>
</HorizontalScrollView>