<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context="com.calibrage.a3ffarmerapp.Fragments.HomeFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Dashboard"
    tools:showIn="@layout/app_bar_dashboard"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:padding="15dp"
                android:background="#4e4e94"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <ImageButton
                        android:id="@+id/collections_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_10"
                        android:background="@drawable/collections" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/Collections"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                       android:layout_marginStart="@dimen/margin_10"
                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/margin_15"
                    >

                    <ImageButton
                        android:id="@+id/payments_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/imageedit_1_3706984635" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/payments"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/margin_15"
                    >

                    <ImageButton
                        android:id="@+id/recommendations_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/imageedit_2_2628132659"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/Recommend"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:layout_marginStart="1dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:background="@drawable/rectangle_shape_grey_border"
                    >

                    <ImageButton
                        android:id="@+id/labour_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/labour" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/labour"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:padding="5dp"
                    android:layout_marginStart="-2dp"
                    >

                    <ImageButton
                        android:id="@+id/pole_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/pole"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/pole"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginStart="-5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:padding="5dp"

                    >

                    <ImageButton
                        android:layout_gravity="center"
                        android:id="@+id/fertilizer_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/fertilizer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/fertilizer"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"

                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"

              >
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="-3dp"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:padding="5dp"
                    >
                    <ImageButton
                        android:id="@+id/quickPay_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/quick_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/quickPay"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"

                        />

                </LinearLayout>


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="-3dp"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/visit_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/visit"
                        android:layout_gravity="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/visit"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="-7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:padding="5dp"
                    >


                    <ImageButton
                        android:id="@+id/loan_button"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/loan"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/loan"
                        android:textColor="#111"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="8dp"
    android:id="@+id/textbg"
    android:background="@color/lightGray"/>
        <LinearLayout
