                android:text="@string/learning"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black"
                android:layout_margin="@dimen/margin_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/knowledge_zone"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/knowledge"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/knowledge_zone"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginStart="-24dp"
                    android:padding="5dp"

                    >

                    <ImageButton
                        android:id="@+id/collection_center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/collection_center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/collection_center"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginStart="-15dp"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/fertilizer_center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/godowns" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/fertilizer_center"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/category1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/knowledge"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category1"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginStart="-24dp"
                    android:padding="5dp"

                    >

                    <ImageButton
                        android:id="@+id/category2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/collection_center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category2"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/rectangle_shape_grey_border"
                    android:layout_marginStart="-15dp"
                    android:padding="5dp"
                    >

                    <ImageButton
                        android:id="@+id/category3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/godowns" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/category3"
                        android:textColor="#111"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/learning_relative"
        android:src="@drawable/call_center_banner"
        android:layout_margin="@dimen/margin_10"

        android:id="@+id/call_center_banner"/>
